<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical"
    android:padding="140dp"
    android:background="@color/corBackground">

    <Button
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:layout_margin="5dp"
        android:background="@drawable/btn_evento_padrao"
        android:onClick="iniciante"
        android:text="@string/nivel_treinamento_iniciante"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="40dp" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:layout_margin="5dp"
        android:background="@drawable/btn_evento_padrao"
        android:onClick="intermediario"
        android:text="@string/nivel_treinamento_intermediario"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="40dp" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:layout_margin="5dp"
        android:background="@drawable/btn_evento_padrao"
        android:onClick="experiente"
        android:text="@string/nivel_treinamento_experiente"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="40dp" />

</LinearLayout>