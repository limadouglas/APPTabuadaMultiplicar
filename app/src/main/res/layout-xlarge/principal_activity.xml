<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="20dp"
    android:background="@color/corBackground">


    <Button
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_marginTop="80dp"
        android:layout_marginBottom="5dp"
        android:background="@drawable/screen_border"
        android:onClick="treinamento"
        android:text="@string/principal_treinamento"
        android:theme="@style/BotaoActivity" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_marginBottom="5dp"
        android:background="@drawable/screen_border"
        android:onClick="desafio"
        android:text="@string/principal_desafio"
        android:theme="@style/BotaoActivity" />


    <Button
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_marginBottom="5dp"
        android:background="@drawable/screen_border"
        android:onClick="tabuada"
        android:text="@string/principal_tabuada"
        android:theme="@style/BotaoActivity" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_marginBottom="5dp"
        android:background="@drawable/screen_border"
        android:onClick="recordes"
        android:text="@string/principal_recordes"
        android:theme="@style/BotaoActivity" />

</LinearLayout>