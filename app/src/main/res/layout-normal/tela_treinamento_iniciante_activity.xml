<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/corBackground"
    android:orientation="vertical">

    <include layout="@layout/toolbar_treinamento"></include>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="15dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/txtPadrao"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2"
                android:textColor="#fff"
                android:textSize="65sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="  X  "
                android:textColor="#fff"
                android:textSize="65sp" />

            <TextView
                android:id="@+id/txtAlternar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="10"
                android:textColor="#fff"
                android:textSize="65sp" />
        </LinearLayout>

        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="40dp"
            android:gravity="center"
            android:stretchColumns="0,1">

            <TableRow>

                <Button
                    android:id="@+id/btnUm"
                    android:layout_width="match_parent"
                    android:layout_height="220dp"
                    android:layout_margin="10dp"
                    android:background="@drawable/btn_evento_padrao"
                    android:onClick="respostaUsuario"
                    android:tag="1"
                    android:text="1"
                    android:textColor="@color/colorPrimaryDark"
                    android:textSize="40dp" />

                <Button
                    android:id="@+id/btnDois"
                    android:layout_width="match_parent"
                    android:layout_height="220dp"
                    android:layout_margin="10dp"
                    android:background="@drawable/btn_evento_padrao"
                    android:onClick="respostaUsuario"
                    android:tag="2"
                    android:text="2"
                    android:textColor="@color/colorPrimaryDark"
                    android:textSize="40dp" />

            </TableRow>

        </TableLayout>


    </LinearLayout>
</LinearLayout>