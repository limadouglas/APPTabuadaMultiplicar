<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/corBackground"
    android:orientation="vertical"
    android:padding="20dp">


        <Button
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="80dp"
            android:background="@drawable/screen_border"
            android:drawableLeft="@drawable/btn_treinamento_normal"
            android:onClick="treinamento"
            android:paddingLeft="50dp"
            android:paddingRight="70dp"
            android:text="@string/principal_treinamento"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="20dp" />

        <Button
            android:id="@+id/button3"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:layout_marginBottom="10dp"
            android:background="@drawable/screen_border"
            android:drawableLeft="@drawable/btn_desafio_normal"
            android:onClick="desafio"
            android:paddingLeft="50dp"
            android:paddingRight="70dp"
            android:text="@string/principal_desafio"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="20dp" />


        <Button
            android:id="@+id/button2"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:layout_marginBottom="10dp"
            android:background="@drawable/screen_border"
            android:drawableLeft="@drawable/btn_tabuada_normal"
            android:onClick="tabuada"
            android:paddingLeft="50dp"
            android:paddingRight="70dp"
            android:text="@string/principal_tabuada"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="20dp" />

        <Button
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:layout_marginBottom="5dp"
            android:background="@drawable/screen_border"
            android:drawableLeft="@drawable/btn_recordes_normal"
            android:onClick="recordes"
            android:paddingLeft="50dp"
            android:paddingRight="70dp"
            android:text="@string/principal_recordes"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="20dp" />

</LinearLayout>