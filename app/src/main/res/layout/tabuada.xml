<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    android:padding="10dp">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:gravity="center"
        android:background="#0a4d18"
        android:textColor="#fff"
        android:textSize="40sp"
        android:text="10 x"
        android:padding="10dp"/>

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:paddingLeft="40dp">

        <TableRow android:layout_margin="5dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="10 X 1"
                android:textSize="30sp"
                android:textColor="#fff"/>
        </TableRow>

        <TableRow android:layout_margin="5dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="10 X 2"
                android:textSize="30sp"
                android:textColor="#fff"/>
        </TableRow>

        <TableRow android:layout_margin="5dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="10 X 3"
                android:textSize="30sp"
                android:textColor="#fff"/>
        </TableRow>

        <TableRow android:layout_margin="5dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="10 X 4"
                android:textSize="30sp"
                android:textColor="#fff"/>
        </TableRow>

        <TableRow android:layout_margin="5dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="10 X 5"
                android:textSize="30sp"
                android:textColor="#fff"/>
        </TableRow>

        <TableRow android:layout_margin="5dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="10 X 6"
                android:textSize="30sp"
                android:textColor="#fff"/>
        </TableRow>

        <TableRow android:layout_margin="5dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="10 X 7"
                android:textSize="30sp"
                android:textColor="#fff"/>
        </TableRow>

        <TableRow android:layout_margin="5dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="10 X 8"
                android:textSize="30sp"
                android:textColor="#fff"/>
        </TableRow>

        <TableRow android:layout_margin="5dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="10 X 9"
                android:textSize="30sp"
                android:textColor="#fff"/>
        </TableRow>

        <TableRow android:layout_margin="5dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="10 X 10"
                android:textSize="30sp"
                android:textColor="#fff"/>
        </TableRow>
    </TableLayout>

</LinearLayout>